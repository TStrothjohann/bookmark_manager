<header>
  <div id="logo">
    <a href="/">Bookmark Manager</a>
  </div>

  <div id="user-links">
      <% if current_user %>
        <span id="welcome-message">
          Welcome, <%= current_user.email %>
        </span>
        
        <form id="sign-out" method="post" action="/sessions">
          <input type="hidden" name="_method" value="delete">
          <input class="btn" type="submit" value="Sign out">
        </form>

      <% else %>
          <a id="sign-up" class="new-user btn" href="/users/new">Sign up</a>
          <a id="sign-in" class="new-session btn" href="/sessions/new">Sign in</a>
      <% end %>
  </div>
</header>