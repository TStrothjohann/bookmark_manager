<!DOCTYPE html>
<html>
<head>
  <link rel="stylesheet" type="text/css" href="/css/application.css">
</head>
<body>
 <%= partial :header %>

  <% if flash[:errors] && !flash[:errors].empty? %>
    Sorry, there were the following problems with the form.
    <ul id="errors">
      <% flash[:errors].each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
<% end %>


  <% if flash[:notice] %>
    <div id="notice">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <%= yield %>
</body>
</html>